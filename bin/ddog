#!/usr/bin/env python

import sys

try:
    import libddog
except ImportError:
    sys.path.append(".")

# isort: split
import os

import click

import libddog
from libddog.command_line.dashboards import ConsoleWriter, DashboardManagerCli
from libddog.command_line.options import attach_help_option


@click.group()
@click.pass_context
def cli(ctx):
    "Datadog dashboard automation cli"
    pass


@click.group()
@click.pass_context
def dash(ctx):
    "Datadog management actions"

    ctx.dash_mgr = DashboardManagerCli(proj_path=".")
    ctx.writer = ConsoleWriter()


@click.command()
@click.pass_context
def version(ctx):
    "ddog version"

    writer = ConsoleWriter()
    writer.println(f"libddog version {libddog.__version__}")


@click.command()
@click.option(
    "-i",
    "--id",
    required=True,
    help="The id of the dashboard to delete",
)
@click.pass_context
def delete_live(ctx, id: str):
    "Delete a live dashboard in Datadog"

    mgr: DashboardManagerCli = ctx.parent.dash_mgr

    exit_code = mgr.delete_live(id=id)
    sys.exit(exit_code)


@click.command()
@click.pass_context
def list_defs(ctx):
    "List dashboard definitions in this project"

    mgr: DashboardManagerCli = ctx.parent.dash_mgr

    exit_code = mgr.list_defs()
    sys.exit(exit_code)


@click.command()
@click.pass_context
def list_live(ctx):
    "List live dashboards in Datadog"

    mgr: DashboardManagerCli = ctx.parent.dash_mgr

    exit_code = mgr.list_live()
    sys.exit(exit_code)


@click.command()
@click.option(
    "-t",
    "--title",
    required=True,
    help="Select the dashboard to publish by title, matched like a wildcard",
)
@click.pass_context
def publish_draft(ctx, title: str):
    "Publish a dashboard definition as a [draft] live dashboard in Datadog"

    mgr: DashboardManagerCli = ctx.parent.dash_mgr

    exit_code = mgr.publish_draft(title_pat=title)
    sys.exit(exit_code)


@click.command()
@click.option(
    "-t",
    "--title",
    required=True,
    help="Select dashboards to update by title, matched like a wildcard",
)
@click.pass_context
def publish_live(ctx, title: str):
    "Publish dashboard definitions as live dashboards in Datadog"

    mgr: DashboardManagerCli = ctx.parent.dash_mgr

    exit_code = mgr.publish_live(title_pat=title)
    sys.exit(exit_code)


@click.command()
@click.option(
    "-i",
    "--id",
    required=True,
    help="The id of the dashboard to snapshot",
)
@click.pass_context
def snapshot_live(ctx, id: str):
    "Create a snapshot on disk of a live dashboard in Datadog"

    mgr: DashboardManagerCli = ctx.parent.dash_mgr

    exit_code = mgr.snapshot_live(id=id)
    sys.exit(exit_code)


cli.add_command(dash)
cli.add_command(version)
dash.add_command(delete_live)
dash.add_command(list_defs)
dash.add_command(list_live)
dash.add_command(publish_draft)
dash.add_command(publish_live)
dash.add_command(snapshot_live)
attach_help_option(cli)

if __name__ == "__main__":
    cli()
